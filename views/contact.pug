extends  base.pug

block scripts
    script(src='/static/index.js')

block style 
    style
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container  
        h1 Contact Us
        form(action="/contact" , method="post" , class="myForm")
           input(type="text" , class="myInput" name="name" placeholder="Enter your Name" )
           input(type="phone" , class="myInput" name="phone" placeholder="Enter your Phone No")
           input(type="email" , class="myInput" name="email" placeholder="Enter your  Email")
           <textarea name="address" id="address" cols="30" rows="5" placeholder="Enter your Address"></textarea>
           <textarea name="desc" id="desc" cols="30" rows="5" placeholder="Description  about u"></textarea>
           button(class='btn')
              |  Submit
